<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Type</th>
      <th>Status</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.type %></td>
        <td><%= user.status %></td>
        <td><%= user.password_digest %></td>
         <% if user.type == "User" %> 
            <td><%= link_to 'Show', user %></td>
         <% elsif user.type == "Admin" %>
           <td><%= link_to 'Show', admin_path(user) %></td>
        <% else %>
          <td><%= link_to 'Show', super_admin_path(user) %></td>

        <% end %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<%= link_to 'login User', login_path %>
<%= button_to 'Logout user', logout_path, method: :delete %>


