<style>
/* Style for the form container */
form {
    max-width: 600px;
    # margin: 0 auto;
}

/* Style for error messages */
#error_explanation {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px;
    border: 1px solid #f5c6cb;
    margin-bottom: 20px;
}

/* Style for form fields */
.field{
    margin-bottom: 15px;
}

label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
}

input[type="text"],
textarea {
    width: 100%;
    padding: 81px;
    box-sizing: border-box;
}

input[type="text"] {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
}

a {
    text-decoration: none;
    color: #007bff;
    padding: 8px 12px;
    margin-right: 10px;
    cursor: pointer;
    border: 1px solid #007bff;
    border-radius: 4px;
    text-align: center;
    background-color: #007bff;
    color: #fff;


}

a:hover {
    background-color: #fff;
    color:  #007bff;
    border-color: #0056b3;
}





.actions {
    text-align: center;
    margin-top: 15px;
}

input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
    border: 1px solid #007bff;
}

input[type="submit"]:hover {
  background-color: #fff;
  color:  #007bff;
  border-color: #0056b3;
}


</style>



<%= form_with(model: [author, blog], local: true) do |form| %>
    <% if blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
  
        <ul>
          <% blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
      <%= link_to 'Your All Blog', author_blogs_path(@author) %>
    </div>

  <% end %>
  