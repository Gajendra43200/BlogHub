<% if flash[:alert].present? %>
<div class="alert alert-danger">
  <%= flash[:alert] %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog_path(blog)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if current_user.nil?%>
<%= link_to 'Back to blog', blogs_path %>
<%else%>
<% if current_user.type == "Admin" %>
<%= link_to 'Back', admin_path(current_user.id) %>
<% elsif current_user.type == "User" %>
<%= link_to 'Back', user_path(current_user.id) %>
<% else %>
<%= link_to 'Back', super_admin_path(current_user.id) %>
<% end %>
<% end %>

