<style>
/* Style for the alert message */
.alert {
    background-color: #f8d7da;
    color: #721c24;
    padding: 10px;
    border: 1px solid #f5c6cb;
    margin-bottom: 20px;
}

/* Style for user details */
p {
    margin: 10px 0;
    font-size: 16px;
}

/* Style for links and buttons */
a, button, input[type="submit"], input[type="button"] {
    text-decoration: none;
    color: #007bff;
    padding: 8px 12px;
    margin-right: 10px;
    cursor: pointer;
    border: 1px solid #007bff;
    border-radius: 4px;
    display: inline-block;
}

a:hover, button:hover, input[type="submit"]:hover, input[type="button"]:hover {
    background-color: #007bff;
    color: #fff;
    border-color: #0056b3;
}


</style>
<% if flash[:alert].present? %>
    <div class="alert alert-danger">
        <%= flash[:alert] %>
    </div>
<% end %>
<p>Name: <%= @admin_user.name %></p>
<p>Email: <%= @admin_user.email %></p>
<p>Phone: <%= @admin_user.phone %></p>
<p>Status: <%= @admin_user.status %></p>
<p>Type: <%= @admin_user.type %></p>
<p>Password: <%= @admin_user.password_digest%></p>
<%= link_to 'Edit', edit_admin_path(@admin_user) %> 
<%= link_to 'Block Unblock User', admins_path %>
<%= link_to 'Pending comments for approval', approve_comments_path %>
<%= link_to 'Create Comment For  author', user_authors_path(@admin_user) %>
<%= link_to 'Create Comment For  Blog', user_blogs_path(@admin_user) %>
<%= link_to 'All Comments', comments_path %><hr>
<%= button_to 'Logout user', logout_path, method: :delete %>
<%= button_to ' Deactivate Account', @admin_user, method: :delete, data: { confirm: 'Are you sure?' } %>

