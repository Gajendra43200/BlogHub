<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Type</th>
      <th>Status</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.type %></td>
        <td><%= user.status %></td>
        <td><%= user.password_digest %></td>
        <td><%= button_to 'Block', block_user_path(user), method: :post, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Unblock', unblock_user_path(user), method: :post, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', admin_path(current_user.id) %>
