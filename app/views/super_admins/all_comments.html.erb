<!-- app/views/comments/index.html.erb -->
<% if @comments.empty? %>
<%= flash[:notice] %>
<%= button_to 'Logout user', logout_path, method: :delete %>
<% else %>
<h1>Comments For Approval</h1>

<table>
  <thead>
    <tr>
      <th>Commentable Type</th>
      <th>Comment Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
      <tr>
      <% if comment.commentable_type == "Author" %>
        <td><%= link_to comment.commentable_type, author_path(comment.commentable_id) %></td>
        <% else %>
        <td><%= link_to comment.commentable_type, blog_path(comment.commentable_id) %></td>
        <% end %>
        <td><%= comment.content %></td>
        <td><%= comment.status %></td>
        <td><%= link_to 'approved', approve_comment_by_super_admin_path(comment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to 'Logout user', logout_path, method: :delete %>
<%= link_to 'All Comments', comments_path %>

<br>
<% end %>

