<style>
form {
    max-width: 400px;
}

.field {
    margin-bottom: 15px;
}

label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
}

input[type="text"],
textarea {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
}

.actions {
    text-align: center;
    margin-top: 15px;

}

input[type="submit"] {
    background-color: #007bff;
    border: 2px solid red;
    color: #fff;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
    border-radius: 4px;
}

input[type="submit"]:hover {
    background-color: #0056b3;
    border: 2px dotted #007bff;

}

</style>

<%= form_with(model: [admin, commentable, comment], local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit "Add Comment" %>
  </div>
<% end %>
