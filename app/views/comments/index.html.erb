<style>
/* Style for the container */
.container {
    max-width: 800px;
    margin: 0 auto;
}

/* Style for comments section */
h1 {
    margin-top: 20px;
}

div {
    margin-bottom: 15px;
}

/* Style for links */
a{
    display: inline-block;
    padding: 10px 15px;
    text-align: center;
    text-decoration: none;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    border: 1px solid #007bff;
    color: #007bff;
    background-color: #fff;
}

a:hover {
    color: #0056b3;
}

/* Optional: Add more styles as needed */

</style>


<h1>Comments For Blog</h1>

<% @comments_blog.each do |comment| %>
  <div>

  <%= link_to comment.commentable_type, blog_path(comment.commentable_id) %></td>
  <%= comment.content %>
  </div>
<% end %><hr>
<%= link_to 'Back to blog', blogs_path %>
<% if current_user.type == "Admin" %>
<%= link_to 'Back', admin_path(current_user.id) %>
<% elsif current_user.type == "User" %>
<%= link_to 'Back', user_path(current_user.id) %>
<% else %>
<%= link_to 'Back', super_admin_path(current_user.id) %>
<% end %><hr>

<h1>Comments For Author</h1>

