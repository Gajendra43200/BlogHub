<!-- app/views/comments/index.html.erb -->
<h1>Comments For Blog</h1>

<% @comments_blog.each do |comment| %>
  <div>
  <strong><%= comment.commentable_type %></strong>:

  <%= link_to comment.commentable_type, blog_path(comment.commentable_id) %></td>
  <%= comment.content %>
  </div>
<% end %>
<%= link_to 'Back to blog', blogs_path %>
<% if current_user.type == "Admin" %>
<%= link_to 'Back', admin_path(current_user.id) %>
<% elsif current_user.type == "User" %>
<%= link_to 'Back', user_path(current_user.id) %>
<% else %>
<%= link_to 'Back', super_admin_path(current_user.id) %>
<% end %>

<h1>Comments For Author</h1>

<% @comments_author.each do |comment| %>
  <div>
  <strong><%= comment.commentable_type %></strong>:
    <%= comment.commentable_type %>
    <strong><%= comment.user_id %></strong>:
    <%= comment.content %>
  </div>
<% end %>
<%= link_to 'Back to authors', authors_path %>
<% if current_user.type == "Admin" %>
<%= link_to 'Back', admin_path(current_user.id) %>
<% elsif current_user.type == "User" %>
<%= link_to 'Back', user_path(current_user.id) %>
<% else %>
<%= link_to 'Back', super_admin_path(current_user.id) %>
<% end %>



